<h1><%= @list.id ? 'Edit list' : 'Create list' %></h1>
<hr/>
<%= form_with(model: [@board, @list], local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: "input", placeholder: "To do List" %>
  </div>
 
 <div class="field">
   <%= f.label :priority %>
   <%= f.text_field :priority, class: "input", placeholder: "Priority Level 1-10"%>
 </div>
 
 <%= f.submit nil, class: "ui blue button" %>
<% end %>
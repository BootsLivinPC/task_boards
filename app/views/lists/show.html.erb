<h1>Project Lists</h1>
<hr/>

<div class="ui card">
  <div class="content">
    <i class="right floated star icon"></i>
    <div class="header"></div>
    <div class="description">
      <p><%= @list.name %></p>
      <p> Priority Level: <%= @list.priority %></p>
    </div>
  </div>
  <div class="ui bottom attached ">
   <div class="ui button"><%= link_to 'Delete', @list, method: :delete %></div>
   <div class="ui button"><%= link_to 'Edit', edit_list_path(@list) %></div>
   <div class="ui button"><%= link_to 'Add Task', new_list_task_path(@list) %></div>
  </div>
</div>
<h2>Tasks</h2>
<% @list.tasks.each do |x| %>
  <%= render 'tasks/task', { task: x } %>
<% end %>
<br />
<%= link_to 'Add Task', new_list_task_path(@list), class: "ui button blue" %>
<br />
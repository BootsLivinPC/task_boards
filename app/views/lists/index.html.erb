<div class="header">Your Project Lists</div>
<div class="ui divider"></div>

<%= link_to 'Add List', new_board_list_path(@board) %>
<hr />
<h2><%= @lists.length <= 0 ? "No lists" : "" %></h2> 
  <div class="ui card">
  <% @lists.each do |list| %>
  <div class="content">
    <i class="right floated star icon"></i>
    <div class="header"><%= "#{list.name}"%></div>
    <div class="description">
      <div> <%= %> </div>
    </div>
  </div>
  <div class="ui bottom attached ">
   <div class="ui button"><%= link_to 'Delete', list, method: :delete %></div>
   <div class="ui button"><%= link_to 'Edit', edit_board_list_path(list) %></div>
  </div>
  <% end %>
</div>

    
 


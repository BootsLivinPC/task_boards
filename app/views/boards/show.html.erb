<h1 class="ui centered header"><%= " #{current_user.full_name} #{@board.name}" %></h1>
<div class="ui centered card">
  <div class="image">
     <img src="https://picsum.photos/200/<%= @board.image %>?random=2"/>
    </div>
    <div class="content">
      <p class=" centered header">
      <%= @board.name %> 
    </p>
</div>
</div>
<%= link_to 'Add ToDo List', new_board_list_path(@board)%>
<div class="ui divider"></div>
<h2><%= @board.lists.length <= 0 ? "No lists" : "" %></h2> 
<%= @board.lists.each do |list| %>
<div class="ui card">
  <div class="content">
    <i class="right floated star icon"></i>
    <div class="header"></div>
    <div class="description">
      <p><%= @board.lists.name %></p>
      <p> Priority Level: <%= @board.lists.priority %></p>
    </div>
  </div>
  <div class="ui bottom attached ">
   <div class="ui button"><%= link_to 'Delete', @list, method: :delete %></div>
   <div class="ui button"><%= link_to 'Edit', edit_list_path(@list) %></div>
   <div class="ui button"><%= link_to 'Add Task', new_list_task_path(@list) %></div>
  </div>
</div>
<%end%>
